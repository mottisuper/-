#include <stdio.h>
#include <stdlib.h>
int* ex1(int n);
void lukas(int* arr, int n);
void printArray(int* arr, int n);

int main() {
int n=3;

while (n > 2) {
printf("Please enter a size of the series: ");
scanf_s("%d", &n);
printArray(ex1(n), n);
}


return 0;
}


int*ex1(int n) {
if (n < 2)
return - 1;
int*arr = (int*)calloc(n, sizeof(int));
lukas(arr, n);
return arr;
}

void lukas(int* arr, int n) {
*arr = 2;
*(arr + 1) = 1;
for (int i = 2; i < n; i++) {
*(arr + i) = *(arr + i - 1) + *(arr + i - 2);
}
}

void printArray(int* arr, int n) {
if (n > 2) {
for (int i = 0; i < n; i++)
printf("(%d) %d\n", i, *(arr + i));

}
}
